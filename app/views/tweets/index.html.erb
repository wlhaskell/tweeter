<p id="notice"><%= notice %></p>

<div class="container">
  <% @tweets.each_with_index do |tweet,i| %>
    <% if i % 3 == 0 %>
      <div class = "row">
    <% end %>
        <div class = "col-md-4">
          <div class = "well">
            <h5><%= link_to tweet.user.name, show_user_path(id: tweet.user.id) %></h5>
            <h5>@<%= tweet.user.username %></h5>
            <p><%= tweet.message %></p>
            <%= link_to 'Show', tweet %>
            <%= link_to 'Edit', edit_tweet_path(tweet) %>
            <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
    <% if i % 3 == 2 || i == @tweets.length%>
      </div>
    <% end %>
  <% end %>
</div>


<%= link_to 'New Tweet', new_tweet_path %>
